<h2><%= @post.title %></h2>
<br>
<p><%= @post.body %></p>
<br>
<br>
<%= render @post.comments%>
<br>
<%= link_to 'Add a comment', new_post_comment_path(@post), class:"btn btn-default"%>
<br>
<br>
<%= link_to 'Back', root_path, class:"btn btn-default"%>
<%= link_to 'Edit Post', edit_post_path(@post), class:"btn btn-default"%>
